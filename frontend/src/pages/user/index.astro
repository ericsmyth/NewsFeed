---
import Layout from '../../layouts/Layout.astro';
import { getUser } from '../../lib/auth';
import { getTheme } from '../../lib/theme';

const user = await getUser();
const theme = await getTheme();
---

<Layout title="User Dashboard">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-6">Welcome back, {user?.name || 'User'}!</h1>
      
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">Theme Settings</h2>
        <form class="space-y-4" id="themeForm">
          <div class="flex items-center">
            <input
              type="radio"
              id="light"
              name="theme"
              value="light"
              checked={theme === 'light'}
              class="mr-2"
            />
            <label for="light">Light Theme</label>
          </div>
          <div class="flex items-center">
            <input
              type="radio"
              id="dark"
              name="theme"
              value="dark"
              checked={theme === 'dark'}
              class="mr-2"
            />
            <label for="dark">Dark Theme</label>
          </div>
          <div class="flex items-center">
            <input
              type="radio"
              id="system"
              name="theme"
              value="system"
              checked={theme === 'system'}
              class="mr-2"
            />
            <label for="system">System Theme</label>
          </div>
        </form>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold mb-4">Your Preferences</h2>
        <p class="text-gray-600 dark:text-gray-300">
          Customize your news feed experience by adjusting your preferences here.
        </p>
      </div>
    </div>
  </main>
</Layout>

<script>
  const themeForm = document.getElementById('themeForm');
  if (themeForm) {
    themeForm.addEventListener('change', async (e) => {
      if (e.target.name === 'theme') {
        try {
          const response = await fetch('/api/theme', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ theme: e.target.value }),
          });
          
          if (response.ok) {
            // Reload the page to apply the new theme
            window.location.reload();
          }
        } catch (error) {
          console.error('Error updating theme:', error);
        }
      }
    });
  }
</script> 