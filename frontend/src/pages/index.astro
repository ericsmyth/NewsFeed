---
import Layout from '../components/Layout.astro';
import '../styles/global.css';
---

<Layout title="Welcome to NewsFeed">
	<div class="max-w-2xl mx-auto py-8 text-center">
		<h1 class="text-4xl font-bold mb-4 text-gray-800">Welcome to NewsFeed</h1>
		<p class="text-xl text-gray-600">Your personalized news aggregator</p>
	</div>
</Layout>

<style>
	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem;
		text-align: center;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: var(--text-color);
	}

	p {
		font-size: 1.25rem;
		color: var(--text-color);
	}
</style>
